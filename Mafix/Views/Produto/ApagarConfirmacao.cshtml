@model ProdutoModel
@{
    ViewData["Title"] = "Confirmacao de apagar o produto";
}

<div class="text-center">
    <h3> Realmente deseja apagar o produto (@Model.Nome)</h3>
</div>

<br />
<br />
<a class="btn btn-primary  w-100" role="button" asp-controller="Produto" asp-action="Index">Cancelar exclusão</a>
<br />
<br />
<a class="btn btn-danger  w-100" role="button" asp-controller="Produto" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>