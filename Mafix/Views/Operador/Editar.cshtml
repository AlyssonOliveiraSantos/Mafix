@model OperadorModel
@{
    ViewData["Title"] = "Editar Operador";
}
<div class="text-center">

    <h1 class="display-4"> Editar Operador</h1>


</div>

<form asp-controller="Operador" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do operador">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cadastro">Cadastro</label>
        <input type="text" asp-for="Cadastro" class="form-control" placeholder="Digite o cadastro do operador">
        @Html.ValidationMessageFor(x => x.Cadastro)
    </div>

    <div class="form-group">
        <label for="secao">Seção</label>
        <input type="text" asp-for="Secao" class="form-control" placeholder="Digite a seção do operador">
        @Html.ValidationMessageFor(x => x.Secao)
    </div>

    <br />

    <button type="submit" class="btn btn-primary w-100">Alterar</button>
    <br />
    <br />
    <a class="btn btn-secondary w-100" asp-controller="Operador" asp-action="Index">Voltar</a>
</form>

