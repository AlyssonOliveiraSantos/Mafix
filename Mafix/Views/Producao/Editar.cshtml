@model ProducaoModel
@{
    ViewData["Title"] = "Editar Produção";
}
<div class="text-center">

    <h1 class="display-4"> Editar Produção</h1>


</div>

<form asp-controller="Producao" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="operadorId">Operador</label>
        <select asp-for="OperadorId" asp-items="ViewBag.Operadores" class="form-control select2">
            <option value="">Selecione um operador</option>
        </select>
        @Html.ValidationMessageFor(x => x.OperadorId)
    </div>

    <div class="form-group">
        <label for="maquinaId">Maquina</label>
        <select asp-for="MaquinaId" asp-items="ViewBag.Maquinas" class="form-control select2">
            <option value="">Selecione uma máquina</option>
        </select>
        @Html.ValidationMessageFor(x => x.MaquinaId)
    </div>

    <div class="form-group">
        <label for="produtoId">Produto</label>
        <select asp-for="ProdutoId" asp-items="ViewBag.Produtos" class="select2 form-control">
            <option value="">Selecione um produto</option>
        </select>
        @Html.ValidationMessageFor(x => x.ProdutoId)
    </div>

    <div class="form-group">
        <label for="QuantidadeProduzida">Quantidade produzida</label>
        <input type="text" asp-for="QuantidadeProduzida" class="form-control" placeholder="Digite a quantidade produzida">
        @Html.ValidationMessageFor(x => x.QuantidadeProduzida)
    </div>

    <div class="form-group">
        <label for="DataProducao">Data da produção</label>
        <input type="date" asp-for="DataProducao" class="form-control">
        @Html.ValidationMessageFor(x => x.DataProducao)
    </div>

    <div class="form-group">
        <label for="HoraDeInicio">Hora de inicio</label>
        <input type="time" asp-for="HoraDeInicio" class="form-control" placeholder="Digite a hora de inicio da produção">
        @Html.ValidationMessageFor(x => x.HoraDeInicio)
    </div>

    <div class="form-group">
        <label for="HoraDeFim">Hora de fim</label>
        <input type="time" asp-for="HoraDeFim" class="form-control" placeholder="Digite a hora de fim da produção">
        @Html.ValidationMessageFor(x => x.HoraDeFim)
    </div>

    <div class="form-group">
        <label for="HoraParada">Horas Paradas</label>
        <input type="time" asp-for="HoraParada" class="form-control" placeholder="Digite a as horas paradas">
    </div>

    <div class="form-group">
        <label for="paradaMaquinaId">Codigo</label>
        <select asp-for="ParadaMaquinaId" asp-items="ViewBag.Paradas" class="form-control">
            <option value="">Selecione um codigo</option>
        </select>
    </div>

    <br />

    <button type="submit" class="btn btn-primary w-100">Alterar</button>
    <br />
    <br />
    <a class="btn btn-secondary w-100" asp-controller="Producao" asp-action="Index">Voltar</a>
</form>

